{
  "name": "@kz/warn",
  "version": "0.0.1",
  "exports": "./mod.ts",
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "no-throw-literal"
      ]
    }
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "proseWrap": "preserve",
    "useTabs": false,
    "singleQuote": true,
    "semiColons": true
  },
  "tasks": {
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test:unit": "deno test --allow-all --trace-leaks",
    "test": "deno test --allow-all --coverage --doc --trace-leaks",
    "cov:gen": "deno coverage coverage --lcov --output=cov.lcov",
    "cov:report": "deno coverage --html coverage",
    "cov": "deno task test && deno task cov:gen && deno task cov:report",
    "docs": "deno doc --html --name=@kz/warn ./mod.ts",
    "pre-commit": "deno task test && deno task lint && deno task fmt && deno task docs"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^0.221.0",
    "@std/testing": "jsr:@std/testing@^0.221.0",
    "@kz/common-types": "jsr:@kz/common-types@^0.0.4",
    "@kz/common-exceptions": "jsr:@kz/common-exceptions@^0.0.1",
    "@kz/observe": "jsr:@kz/observe@^0.0.2"
  },
  "exclude": [
    ".git",
    "cov",
    "coverage",
    "testdata",
    "docs"
  ],
  "publish": {
    "include": [
      "README.md",
      "LICENSE",
      "mod.ts",
      "src/**/*.ts",
      "deno.json",
      "deno.lock"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ]
  }
}
